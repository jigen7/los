<form action="" method="post" name="product">
	<table border=1 width="100%" style="border-width: 2px 2px 2px 2px;border-spacing: 1px;
		border-style: solid solid solid solid;border-color: black black black black;
		border-collapse: collapse;background-color: white;">
		<tr>
			<td width="88%" align="left" onMouseOver="this.style.background='red';this.style.cursor='pointer';this.style.color='white'"
		        onmouseout="this.style.background='white';this.style.color='black'" onClick=""><strong>
		        <?=$this->title;?></strong></td>
		</tr>
	</table>
<center>
<p></p>
<table width="450" border="0">
  <tr>
    <td width="134"><strong>Model Used:</strong></td>
    <td width="306"><?=strtoupper($this->modelver)?></td>
  </tr>
  <tr>
    <td><strong>Cap No:</strong></td>
    <td><?=$this->capno?></td>
  </tr>
  <tr>
    <td><strong>Principal Borrower:</strong></td>
    <td><a href="#" onclick="window.open('<?=$this->baseURL();?>/index/account/cap/<?=$this->capno?>','LOS Detail','width=800,height=300,scrollbars=yes,resizable=no, menubar =yes');">
      <?=$this->getBorrowerName($this->capno)?>
    </a></td>
  </tr>
  <tr>
    <td><strong>Score Basis:</strong></td>
    <td><?=$this->getBorrowerName($this->outputWt['capbasis'])." ".$this->getBorrowerRelation($this->outputWt['capbasis'])?></td>
  </tr>
</table>
<br />
<table width="450" border="0">
  <tr>
    <td width="134"><strong>Sum:</strong></td>
    <td width="306"><?=$this->outputWt['totalscore']?></td>
  </tr>
  <tr>
    <td><strong>Score Tag:</strong></td>
    <td><?=$this->scoretag?></td>
  </tr>
  <tr>
    <td><strong>Date:</strong></td>
    <td><?=date("M-d-Y",strtotime($this->datetime))?></td>
  </tr>
  <tr>
    <td><strong>Generated by:</strong></td>
    <td><?=$this->viewMa($this->by)?></td>
  </tr>
</table>
<br />
<table width="450" cellspacing="1" cellpadding="2" class="scrolltable" id="myScrollTable">
   <thead>
      <tr align="center">
        <td width="90"><strong>Fields</strong></td>
        <td width="287"><strong>Values</strong></td>
        <td width="55"><strong>Weights</strong></td>
      </tr>
   </thead>
   <tbody>
  <? foreach ($this->outputWt as $x=>$y) { ?>
      <tr>
      
        <td><?=($x != 'totalscore')? $this->ViewFieldName($x): ucfirst($x)?></td>
        <td><?=$this->outputAttr[$x]?> </td>
        <td align="center"><?=$y?></td>
      </tr>
  <? if($x == 'totalscore'){ break; } } ?>
   </tbody>
</table>
<p></p>

<? if($this->ohtable){ ?>
	<table width="450" cellspacing="1" cellpadding="2" class="scrolltable" id="myScrollTable">
    	<thead>
        	<tr>
            	<td width="110" align="center"><b/>Rule</td>
                <td width="327" align="center"><b/>Value</td>
            <tr>
        </thead>
        <tbody>
		<? foreach($this->ohtable as $ohrow) {?>
        	<tr>
            	<td><?=ucfirst($ohrow->rule)?></td>
            	<td><?=$this->ViewOCS($ohrow->row)?></td>
            </tr>
        <? } ?>
        </tbody>
    </table>
<? } ?>
</center>
</form>
